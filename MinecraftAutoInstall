#!/bin/bash

dedicatedRAM=1024M
apt-get update
apt-get upgrade
apt-get install openjdk-7-jdk
apt-get install wget
mkdir minecraft
cd minecraft
wget https://s3.amazonaws.com/Minecraft.Download/versions/1.9.4/minecraft_server.1.9.4$
chmod +x minecraft_server.1.9.4.jar
rm eula.txt
echo -e "eula=true" >> /minecraft/eula.txt
java -Xmx1024M -Xms1024M -jar minecraft_server.1.9.4.jar nogui
